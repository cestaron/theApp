doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='preconnect' href='https://fonts.gstatic.com')
    link(href='https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@300;400;500&family=Titillium+Web:wght@200&display=swap' rel='stylesheet')
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet')
    link(rel='stylesheet' href='/css/style.css')  
    title Home
  body
    .ta-c
      header
        .container
          ul.clearfix
            li.fl.header-btn.header-brand
              a(href='/') CoinMarketDiscount
            if !user
              li.fr.header-btn
                a.lgn-btn.dp-ib(href='/user/login') Login
              li.fr.header-btn
                a.rgs-btn.dp-ib(href='/user/register') Register
            if user
              li.fr.header-btn
                a.lgn-btn.dp-ib(href='/user/account/'+user.id) Account
              li.fr.header-btn
                a.rgs-btn.dp-ib(href='/user/logout') Logout
            
      main
        .container
          != messages('message', locals)
          if errors
            each error, i in errors
              div(class="alert alert-danger") #{error.msg}
          .main-about
            ul
              li
                h1 Get more discount as cashback
              li
                p Register exchanges with our referances to get more discounts as cashback
              if !user
                li
                  a.dp-ib.gs-btn(href='/user/login') Get Started
              if user
                li
                  a.dp-ib.gs-btn(href='/user/account/'+user.id) Get Started
          .main-content
            .main-articles.clearfix
              .main-article
                .main-article-content.clearfix
                  .main-article-header
                    img(src='/logos/binance.svg' alt='')
                  .main-article-body
              .main-article
                .main-article-content.clearfix
                  .main-article-header
                    img(src='/logos/okex.svg' alt='')
                  .main-article-body
              .main-article
                .main-article-content.clearfix
                  .main-article-header
                    img(src='/logos/ftx.svg' alt='')
                  .main-article-body
            .main-articles.clearfix
              .main-article
                .main-article-content.clearfix
                  .main-article-header
                    img(src='/logos/huobi.svg' class='w-60' alt='')
                  .main-article-body
              .main-article
                .main-article-content.clearfix
                  .main-article-header
                    img(src='/logos/gateio.svg' alt='')
                  .main-article-body
              .main-article
                .main-article-content.clearfix
                  .main-article-header
                    img(src='/logos/kucoin.svg' alt='')
                  .main-article-body
      footer
        .container
          ul
            li
              span
                | Get in touch
                | contact@coinmarketdiscount.com
            li
              span 
                | 2021
                |
            li
              a(href='/#') About
      
    script(src='/bower_components/jquery/dist/jquery.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/js/main.js')  
